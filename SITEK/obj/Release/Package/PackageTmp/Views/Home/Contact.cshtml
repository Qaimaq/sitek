@model SITEK.Models.ContactFormModel
@{
    ViewBag.Title = SITEK.Resources.Resource.menu07;
    
}

<div id="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2239.830868393542!2d51.9167596607074!3d47.11073869874182!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x46221a55e32f565f!2z0J7RgtC10LvRjCDQoNC40LLQtdGAINCf0LDQu9Cw0YE!5e0!3m2!1skk!2skz!4v1495511924152" width="100%" height="370" frameborder="0" style="border:0" allowfullscreen></iframe>
</div>
<div id="content">
    <div class="container">
        <div class="big-title text-center">
            <h1><span class="accent-color"> @SITEK.Resources.Resource.menu7</span><strong></strong></h1>
            <p class="title-desc">@SITEK.Resources.Resource.ContactDesc</p>
        </div>
        <div class="hr5" style="margin-top:30px; margin-bottom:35px;"></div>
        <div class="row">
            <div class="col-md-8">
                @using (Html.BeginForm("SendMessage", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="classic-title"><span>@SITEK.Resources.Resource.menu7</span></h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">@SITEK.Resources.Resource.menu8<span class="required">*</span></label>
                                <span class="name-missing">@SITEK.Resources.Resource.name1</span>
                                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FromName)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="e-mail">@SITEK.Resources.Resource.email1<span class="required">*</span></label>
                                <span class="email-missing">@SITEK.Resources.Resource.email2</span>
                                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FromEmail)
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px">
                        <div class="col-md-12">
                            <div class="form-group userMessage">
                                <label for="message">@SITEK.Resources.Resource.number2</label>
                                <span class="message-missing">@SITEK.Resources.Resource.number3</span>
                                @Html.TextAreaFor(m => m.Message, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.Message)
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 20px">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" class="btn btn-default" value="@SITEK.Resources.Resource.send" />
                            </div>
                        </div>
                    </div>
                }
                <div class="g-recaptcha" data-sitekey="6LdYZycUAAAAAItvfYSHPH40D-8bOttJbGNACi_F"></div>
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
            <div class="col-md-4">
                <h4 class="classic-title"><span>@SITEK.Resources.Resource.contact01</span></h4>
                <p>@SITEK.Resources.Resource.ContactDescr</p>
                <div class="hr1" style="margin-bottom:10px;"></div>
                <ul class="icons-list">
                    <li><i class="icon-location-1"></i> <strong>@SITEK.Resources.Resource.number4 :</strong>@SITEK.Resources.Resource.number5</li>
                    <li><a href="mailto:info@sitekcaspian.kz"><i class="icon-mail-1"></i> <strong>@SITEK.Resources.Resource.email1 :</strong> info@sitekcaspian.kz</a></li>
                    <li><a href="tel:+77122272072"><i class="icon-mobile-1"></i> <strong>@SITEK.Resources.Resource.email3 :</strong> +77122272072</a></li>
                </ul>

                <!-- Divider -->
                <div class="hr1" style="margin-bottom:15px;"></div>

                <!-- Classic Heading -->
                <h4 class="classic-title"><span>@SITEK.Resources.Resource.aboutTime1</span></h4>

                <!-- Info - List -->
                <ul class="list-unstyled">
                    <li><i class="icon icon-time"></i> <strong>@SITEK.Resources.Resource.aboutTime2</strong>@SITEK.Resources.Resource.aboutTime4</li>
                    <li><i class="icon icon-time"></i> <strong>@SITEK.Resources.Resource.aboutTime3</strong> @SITEK.Resources.Resource.aboutTime5</li>
                </ul>
            </div>
        </div>

        <div class="hr1" style="margin-bottom:32px;"></div>
        <div class="row sidebar-page">
        </div>
    </div>
</div>